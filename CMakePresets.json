{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 29,
        "patch": 3
    },
    "configurePresets": [
        {
            "name": "default",
            "binaryDir": "${sourceDir}/build"
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "hidden": true,
            "jobs": 8
        },
        {
            "name": "debug",
            "inherits": "base",
            "configurePreset": "default",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "inherits": "base",
            "configurePreset": "default",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "base",
            "hidden": true,
            "configurePreset": "default",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "debug",
            "inherits": "base",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "inherits": "base",
            "configuration": "Release"
        }
    ],
    "workflowPresets": [
        {
            "name": "debug",
            "steps": [
                { "type": "configure", "name": "default" },
                { "type": "build", "name": "debug" },
                { "type": "test", "name": "debug" }
            ]
        },
        {
            "name": "release",
            "steps": [
                { "type": "configure", "name": "default" },
                { "type": "build", "name": "release" },
                { "type": "test", "name": "release" }
            ]
        }
    ]
}
